{
  "extends": ["tslint:latest", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": ["node_modules/**"]
  },
  "rules": {
    "max-line-length": [true, 80],
    "max-classes-per-file": 2,
    "no-submodule-imports": false,
    "no-implicit-dependencies": false,
    "no-namespace": false
  }
}
